{
  "name": "vibe-summer-concierge",
  "version": "1.0.0",
  "description": "Intelligent calendar management, focus music, and AI-powered task synthesis",
  "main": "src/index.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.js --external:cloudflare:*",
    "dev": "wrangler dev --env production",
    "deploy": "wrangler deploy --env production",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply vibe-summer-concierge-db --env production"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.7",
    "@fiberplane/hono": "^0.3.0",
    "@hono/mcp": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "ai": "^5.0.8",
    "better-auth": "^1.3.3",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.8.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250722.0",
    "@types/node": "^22.0.0",
    "drizzle-kit": "^0.30.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.0",
    "wrangler": "^4.28.1"
  }
}
